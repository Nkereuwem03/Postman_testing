		{
			"name": "Register",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"id": "40db58a6-d0d8-4216-bcc7-d471daf5152d",
						"exec": [
							"const random = Math.random().toString(5).substring(2);\r",
							"const clientName = random;\r",
							"const clientEmail = `${random}@example.com`;\r",
							"\r",
							"let requestBody = {\r",
							"    clientName,\r",
							"    clientEmail\r",
							"};\r",
							"\r",
							"pm.request.body.mode = 'raw';\r",
							"pm.request.body.raw = JSON.stringify(requestBody);\r",
							"pm.environment.set(\"clientName\", clientName);\r",
							"pm.environment.set(\"clientEmail\", clientEmail);"
						],
						"type": "text/javascript",
						"packages": {}
					}
				},
				{
					"listen": "test",
					"script": {
						"id": "cb5cfa08-b51b-42d4-a0c3-42137705ae3b",
						"exec": [
							"let accessToken = pm.response.json().accessToken;\r",
							"\r",
							"pm.environment.set(\"accessToken\", accessToken);\r",
							"\r",
							"pm.test(\"Status code is 201\", function () {\r",
							"    pm.response.to.have.status(201);\r",
							"})\r",
							"\r",
							"pm.test(\"Response time is less than 1000ms\", function () {\r",
							"    pm.expect(pm.response.responseTime).to.be.below(10000);\r",
							"})\r",
							"\r",
							"pm.test(\"Response body contains accessToken\", function () {\r",
							"    pm.expect(pm.response.json()).to.have.property(\"accessToken\");\r",
							"})"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
